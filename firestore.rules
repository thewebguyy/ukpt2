rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Products: Read all, write admin only
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: Read by email match, create by Cloud Functions only
    match /orders/{orderId} {
      allow read: if isSignedIn() && (resource.data.email == request.auth.token.email || isAdmin());
      allow create: if false; // Creation restricted to Cloud Functions
      allow update, delete: if isAdmin();
    }

    // Users: Read/write own only
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Carts: Own only
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Admin list: Read admin only, no client writes
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // Newsletter: Rate-limited updates, create with email match
    match /newsletter/{email} {
      allow create: if request.resource.data.email == email;
      allow update: if request.resource.data.email == email && request.time > resource.data.createdAt + duration('1m');
      allow read, delete: if isAdmin();
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}